            Sphinx = 2.x;

            # Dependencies for formatting checks. Controlled in `setup.py`
            BrazilPython-formatters = 1.0;
            Python-black = no1;
            Python-isort = 5.x;

            # Dependencies for type checking. Controlled in `setup.py`
